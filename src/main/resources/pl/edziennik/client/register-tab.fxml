<Tab fx:id="registerTab" text="%label.register" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edziennik.client.controller.auth.RegisterController">
    <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="-1.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="306.0" prefWidth="625.0" spacing="5.0" stylesheets="@css/global-field-styles.css">
                    <children>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="625.0" spacing="50.0">
                            <children>
                                <Label contentDisplay="CENTER" prefWidth="200.0" styleClass="authorization-label" stylesheets="@css/authorization-style.css" text="%label.username" />
                                <TextField fx:id="usernameInput" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="200.0" spacing="50.0">
                            <children>
                                <Label prefWidth="200.0" styleClass="authorization-label" stylesheets="@css/authorization-style.css" text="%label.email" />
                                <TextField fx:id="emailInput" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="200.0" spacing="50.0">
                            <children>
                                <Label prefWidth="200.0" styleClass="authorization-label" stylesheets="@css/authorization-style.css" text="%label.password" />
                        <PasswordField fx:id="passwordInput" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="200.0" spacing="50.0">
                            <children>
                                <Label prefWidth="200.0" styleClass="authorization-label" stylesheets="@css/authorization-style.css" text="%label.repeat.password" />
                        <PasswordField fx:id="repeatPasswordInput" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="85.0" prefWidth="625.0" spacing="210.0">
                            <children>
                                <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="authorization-button" stylesheets="@css/authorization-style.css" text="%exit.button" textFill="WHITE">
