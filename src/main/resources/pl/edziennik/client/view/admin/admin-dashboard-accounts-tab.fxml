                    </top>
                    <center>
                        <TabPane fx:id="accountsMainTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                            <tabs>
                                <fx:include fx:id="studentsTab" source="admin-dashboard-accounts-students-tab.fxml"/>
                                <fx:include fx:id="teachersTab" source="admin-dashboard-accounts-teachers-tab.fxml"/>
                                <fx:include fx:id="administrationsTab" source="admin-dashboard-accounts-administration-tab.fxml"/>
                            </tabs>
                        </TabPane>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
    </content>
    <graphic>
        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
